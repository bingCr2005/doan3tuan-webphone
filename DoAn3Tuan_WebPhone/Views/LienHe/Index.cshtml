@model IEnumerable<DoAn3Tuan_WebPhone.Models.LienHe>
@{
    ViewData["Title"] = "Quản lý liên hệ";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>📞 Quản lý liên hệ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-2 sidebar bg-dark text-white p-3">
                <h4 class="text-center mb-4">ADMIN</h4>
                <a href="#" class="d-block text-white text-decoration-none p-2">🏠 Dashboard</a>
                <a href="/DienThoai/Index" class="d-block text-white text-decoration-none p-2">📱 Điện thoại</a>
                <a href="/HangDienThoai/Index" class="d-block text-white text-decoration-none p-2">🏷️ Hãng điện thoại</a>
                <a href="/KhachHang/Index" class="d-block text-white text-decoration-none p-2">👥 Khách hàng</a>
                <a href="/NhaCungCap/Index" class="d-block text-white text-decoration-none p-2">🏭 Nhà cung cấp</a>
                <a href="/KhuyenMai/Index" class="d-block text-white text-decoration-none p-2">🎁 Khuyến mãi</a>
                <a href="/DonHang/Index" class="d-block text-white text-decoration-none p-2">🛒 Đơn hàng</a>
                <a href="/ThongKe/Index" class="d-block text-white text-decoration-none p-2">📈 Thống kê</a>
                <a href="/BinhLuan/Index" class="d-block text-white text-decoration-none p-2">💬 Bình luận</a>
                <a href="/LienHe/Index" class="d-block text-white text-decoration-none p-2 active bg-primary rounded">📞 Liên hệ</a>
                <a href="#" class="d-block text-white text-decoration-none p-2">🚪 Đăng xuất</a>
            </div>

            <!-- Content -->
            <div class="col-10 p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>📩 Quản lý liên hệ</h3>
                    <form class="d-flex gap-2" method="get" action="/LienHe/Index">
                        <input type="text" name="search" class="form-control" placeholder="🔍 Tìm kiếm theo tên hoặc email..." style="width: 300px;">
                        <button type="submit" class="btn btn-success">Tìm</button>
                    </form>
                </div>

                <table class="table table-bordered table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã liên hệ</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Nội dung</th>
                            <th>Ngày gửi</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaLienHe</td>
                                <td>@item.HoTen</td>
                                <td>@item.Email</td>
                                <td>@item.SoDienThoai</td>
                                <td class="text-start">@item.NoiDung</td>
                                <td>@item.NgayGui?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (item.TrangThai == 1)
                                    {
                                        <span class="badge bg-success">Đã phản hồi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Chưa phản hồi</span>
                                    }
                                </td>

                                <td>
                                    <a asp-action="Edit"
                                       asp-route-id="@item.MaLienHe"
                                       class="btn btn-sm btn-warning">
                                        ✏️ Sửa
                                    </a>

                                    <form asp-action="DeleteConfirmed"
                                          asp-route-id="@item.MaLienHe"
                                          method="post"
                                          style="display:inline"
                                          onsubmit="return confirm('Bạn có chắc muốn xóa liên hệ này không?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            🗑️ Xóa
                                        </button>
                                    </form>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
                <!-- Phân trang -->
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mt-3">
                        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == (int)ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                   href="@Url.Action("Index", "LienHe", new { page = i, search = ViewBag.Search })">@i</a>
                            </li>
                        }
                    </ul>
                </nav>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
