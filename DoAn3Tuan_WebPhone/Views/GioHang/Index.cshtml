@model List<GioHang>

<h2>Giỏ hàng</h2>

<table class="table table-bordered">
    <tr>
        <th>Điện thoại</th>
        <th>Số lượng</th>
        <th>Giá</th>
        <th>Thành tiền</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaDienThoaiNavigation?.TenDienThoai</td>
            <td>
                <form asp-action="Update" method="post">
                    <input type="hidden" name="id" value="@item.MaGioHang" />
                    <input type="number" name="qty"
                           value="@item.SoLuongHang" min="1" />
                    <button class="btn btn-sm btn-primary">
                        Cập nhật
                    </button>
                </form>
            </td>
            <td>@item.ThanhTien</td>
            <td>
                <a asp-action="Delete"
                   asp-route-id="@item.MaGioHang"
                   class="btn btn-danger btn-sm">
                    Xóa
                </a>
            </td>
        </tr>
    }
</table>

<a asp-action="Clear" class="btn btn-danger">
    Xóa hết giỏ hàng
</a>

<hr />

@for (int i = 1; i <= ViewBag.TotalPage; i++)
{
    <a asp-route-page="@i" class="btn btn-outline-secondary btn-sm">
        @i
    </a>
}
