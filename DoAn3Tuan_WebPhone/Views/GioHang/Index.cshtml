@model List<DoAn3Tuan_WebPhone.Models.ChiTietGioHang>

<h2>Giỏ hàng</h2>

@if (!Model.Any())
{
    <p>Giỏ hàng trống</p>
}
else
{
    <form asp-controller="ThanhToan"
          asp-action="Checkout"
          method="post"
          id="checkoutForm">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Hình</th>
                    <th>Điện thoại</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                    <th></th>
                    <th>Chọn</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="100">
                            <img src="~@(item.MaDienThoaiNavigation?.Thumbnail ?? "no-image.png")"
                                 class="img-thumbnail"
                                 style="width:80px;height:80px" />
                        </td>

                        <td>@item.MaDienThoaiNavigation?.TenDienThoai</td>

                        <td>
                            <input type="number"
                                   value="@item.SoLuong"
                                   min="1"
                                   id="qty_@item.MaCtgh"
                                   class="form-control d-inline"
                                   style="width:80px" />

                            <button type="button"
                                    class="btn btn-primary btn-sm"
                                    onclick="updateQty(@item.MaCtgh)">
                                Cập nhật
                            </button>
                        </td>

                        <td>@item.MaDienThoaiNavigation?.DonGia.ToString("N0") đ</td>
                        <td>@item.ThanhTien?.ToString("N0") đ</td>

                        <td>
                            <a asp-action="Delete"
                               asp-route-id="@item.MaCtgh"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Xóa sản phẩm?')">
                                Xóa
                            </a>
                        </td>

                        <td class="text-center">
                            <input type="checkbox"
                                   name="selectedIds"
                                   value="@item.MaCtgh"
                                   checked />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <hr />

        <div class="d-flex justify-content-between">
            <a asp-action="Clear"
               class="btn btn-outline-danger"
               onclick="return confirm('Xóa hết giỏ hàng?')">
                Xóa hết giỏ
            </a>

            <button type="submit" class="btn btn-success btn-lg">
                 Thanh toán sản phẩm đã chọn
            </button>
        </div>

    </form>
}

<script>
    function updateQty(id) {
        const qty = document.getElementById("qty_" + id).value;

        fetch('/GioHang/Update', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: `id=${id}&qty=${qty}`
        })
        .then(() => location.reload());
    }
</script>
