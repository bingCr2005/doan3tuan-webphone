@model List<DoAn3Tuan_WebPhone.Models.ChiTietGioHang>

<h2>Giỏ hàng</h2>

@if (!Model.Any())
{
    <p>Giỏ hàng trống</p>
}
else
{
    <form asp-controller="ThanhToan"
          asp-action="Checkout"
          method="post"
          id="checkoutForm">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Hình</th>
                    <th>Điện thoại</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                    <th></th>
                    <th>Chọn</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="100">
                            <img src="~@(item.MaDienThoaiNavigation?.Thumbnail ?? "no-image.png")"
                                 class="img-thumbnail"
                                 style="width:80px;height:80px" />
                        </td>

                        <td>@item.MaDienThoaiNavigation?.TenDienThoai</td>

                        <td>
                            <input type="number"
                                   value="@item.SoLuong"
                                   min="1"
                                   id="qty_@item.MaCtgh"
                                   class="form-control d-inline"
                                   style="width:80px" />

                            <button type="button"
                                    class="btn btn-primary btn-sm"
                                    onclick="updateQty(@item.MaCtgh)">
                                Cập nhật
                            </button>
                        </td>

                        <td>@item.MaDienThoaiNavigation?.DonGia.ToString("N0") đ</td>
                        <td>@item.ThanhTien?.ToString("N0") đ</td>

                        <td>
                            <a asp-action="Delete"
                               asp-route-id="@item.MaCtgh"
                               asp-route-page="@ViewBag.CurrentPage"
                               class="btn btn-danger btn-sm">
                                Xóa
                            </a>
                        </td>

                        <td class="text-center">
                            <input type="checkbox"
                                   name="selectedIds"
                                   value="@item.MaCtgh"
                                   checked />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <hr />

        <div class="d-flex justify-content-between">
            <a asp-action="Clear"
               class="btn btn-outline-danger"
               onclick="return confirm('Xóa hết giỏ hàng?')">
                Xóa hết giỏ
            </a>

            <button type="submit" class="btn btn-success btn-lg">
                 Thanh toán sản phẩm đã chọn
            </button>
        </div>

    </form>
    @if (ViewBag.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">

                <!-- Previous -->
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })">
                        «
                    </a>
                </li>

                <!-- Page number -->
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action("Index", new { page = i })">
                            @i
                        </a>
                    </li>
                }

                <!-- Next -->
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })">
                        »
                    </a>
                </li>

            </ul>
        </nav>
    }

}

<script>
       function updateQty(id) {
        const qty = document.getElementById("qty_" + id).value;

        fetch('/GioHang/Update?page=@ViewBag.CurrentPage', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: `id=${id}&qty=${qty}`
        })
        .then(() => location.href = '?page=@ViewBag.CurrentPage');
    }
</script>
