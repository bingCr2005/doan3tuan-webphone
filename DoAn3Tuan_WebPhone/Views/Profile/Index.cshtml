@{
    ViewData["Title"] = "Profile";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Thông Tin Cá Nhân</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        /* Thẻ chứa thông tin chính */
        .profile-card {
            background: white;
            width: 400px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            overflow: hidden;
            border: 1px solid #e1e4e8;
        }

        /* Phần đầu trang trí */
        .header-bg {
            background: linear-gradient(120deg, #007bff, #00d4ff);
            height: 100px;
        }

        .content {
            padding: 20px;
            margin-top: -50px; /* Đẩy nội dung lên đè banner */
            text-align: center;
        }

        .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 5px solid white;
            background: #ddd;
            margin-bottom: 10px;
        }

        .info-group {
            text-align: left;
            margin-top: 20px;
            padding: 0 10px;
        }

        .info-item {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #f1f1f1;
        }

            .info-item:last-child {
                border-bottom: none;
            }

        .label {
            color: #6c757d;
            font-size: 0.9rem;
            font-weight: 500;
        }

        .value {
            color: #333;
            font-weight: 600;
            font-size: 0.95rem;
        }

        .btn-edit {
            margin-top: 25px;
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 10px;
            background: #f0f7ff;
            color: #007bff;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn-edit:hover {
                background: #007bff;
                color: white;
            }
    </style>
</head>
<body>

    <div class="profile-card">
        <div class="header-bg"></div>
        <div class="content">
            <img src="https://vivureviews.com/wp-content/uploads/2022/08/avatar-vo-danh-9.png" alt="Avatar" class="avatar">
            <h2 style="margin: 5px 0; color: #1a1a1a;">Trần Tuấn Anh</h2>
            <p style="color: #007bff; margin: 0; font-size: 0.85rem; font-weight: bold; text-transform: uppercase;">ID: xxxxxxxxxx</p>

            <div class="info-group">
                <div class="info-item">
                    <span class="label">Giới tính:</span>
                    <span class="value">Nam</span>
                </div>
                <div class="info-item">
                    <span class="label">Ngày sinh:</span>
                    <span class="value">26/04/2005></span>
                </div>
                <div class="info-item">
                    <span class="label">Email:</span>
                    <span class="value">abc@gmail.com</span>
                </div>
                <div class="info-item">
                    <span class="label">SĐT:</span>
                    <span class="value">0933 111 222</span>
                </div>
                <div class="info-item">
                    <span class="label">Địa chỉ:</span>
                    <span class="value">TP. Hồ Chí Minh</span>
                </div>
            </div>

            <button class="btn-edit">Chỉnh sửa thông tin</button>
        </div>
    </div>

</body>
</html>