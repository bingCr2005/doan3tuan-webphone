@model DoAn3Tuan_WebPhone.Models.HoaDon

<h3>Cập nhật đơn hàng</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaHoaDon" />

    <div class="mb-2">
        <label>Người nhận</label>
        <input asp-for="TenNguoiNhan" class="form-control" />
    </div>

    <div class="mb-2">
        <label>Số điện thoại</label>
        <input asp-for="SoDienThoai" class="form-control" />
    </div>

    <div class="mb-2">
        <label>Địa chỉ giao hàng</label>
        <input asp-for="DiaChiGiaoHang" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Trạng thái</label>
        <select asp-for="TrangThai" class="form-select">
            <option value="0">Chờ xử lý</option>
            <option value="1">Đang giao</option>
            <option value="2">Hoàn thành</option>
            <option value="3">Đã hủy</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
