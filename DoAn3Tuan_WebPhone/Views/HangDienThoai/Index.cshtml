@model IEnumerable<DoAn3Tuan_WebPhone.Models.HangDienThoai>
@{
    ViewData["Title"] = "Quản lý hãng điện thoại";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>🏷️ Quản lý hãng điện thoại</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 sidebar bg-dark text-white p-3">
                <h4 class="text-center mb-4">ADMIN</h4>
                <a href="/Dashboard/Index" class="d-block text-white text-decoration-none p-2">🏠 Dashboard</a>
                <a href="/DienThoai/Index" class="d-block text-white text-decoration-none p-2">📱 Điện thoại</a>
                <a href="/HangDienThoai/Index" class="d-block text-white text-decoration-none p-2 active bg-primary rounded">🏷️ Hãng điện thoại</a>
                <a href="/KhachHang/Index" class="d-block text-white text-decoration-none p-2">👥 Khách hàng</a>
                <a href="/NhaCungCap/Index" class="d-block text-white text-decoration-none p-2">🏭 Nhà cung cấp</a>
                <a href="/KhuyenMai/Index" class="d-block text-white text-decoration-none p-2">🎁 Khuyến mãi</a>
                <a href="/DonHang/Index" class="d-block text-white text-decoration-none p-2">🛒 Đơn hàng</a>
                <a href="/ThongKe/Index" class="d-block text-white text-decoration-none p-2">📈 Thống kê</a>
                <a href="/BinhLuan/Index" class="d-block text-white text-decoration-none p-2">💬 Bình luận</a>
                <a href="/LienHe/Index" class="d-block text-white text-decoration-none p-2">📞 Liên hệ</a>
                <a href="/Account/Logout" class="d-block text-white text-decoration-none p-2">🚪 Đăng xuất</a>
            </div>

            <div class="col-10 p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3>🏷️ Quản lý hãng điện thoại</h3>
                    <form class="d-flex gap-2" method="get" action="/HangDienThoai/Index">
                        <input type="text" name="search" class="form-control" placeholder="🔍 Tìm kiếm theo tên hãng..." style="width: 300px;" value="@ViewBag.Search">
                        <button type="submit" class="btn btn-success">Tìm</button>
                    </form>
                </div>

                <div class="mb-3">
                    <a asp-action="Create" class="btn btn-primary">➕ Thêm hãng mới</a>
                </div>

                <table class="table table-bordered table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã hãng</th>
                            <th>Tên hãng điện thoại</th>
                            <th>Mô tả</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.MaHangDienThoai</td>
                                <td>@item.TenHangDienThoai</td>
                                <td class="text-start">@item.MoTa</td>
                                <td>
                                    @if (item.TrangThai == 1)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Đã khóa</span>
                                    }
                                </td>

                                <td>
                                    <a asp-action="Edit"
                                       asp-route-id="@item.MaHangDienThoai"
                                       class="btn btn-sm btn-warning">
                                        ✏️ Sửa
                                    </a>

                                    <form asp-action="DeleteConfirmed"
                                          asp-route-id="@item.MaHangDienThoai"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Bạn có chắc muốn xóa hãng này không?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            🗑️ Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mt-3">
                        @if (ViewBag.TotalPages != null)
                        {
                            for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == (int)ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link"
                                       href="@Url.Action("Index", "HangDienThoai", new { page = i, search = ViewBag.Search })">@i</a>
                                </li>
                            }
                        }
                    </ul>
                </nav>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>