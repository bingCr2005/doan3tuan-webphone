@model IEnumerable<DoAn3Tuan_WebPhone.Models.HangDienThoai>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Quản lý Danh mục (Hãng điện thoại)</h3>
        <a asp-action="Create" class="btn btn-success">Thêm Hãng Mới</a>
    </div>

    <form asp-action="Index" method="get" class="mb-3 w-50">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Tìm tên hãng..." value="@Context.Request.Query["searchString"]">
            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
        </div>
    </form>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Mã Hãng</th>
                <th>Tên Hãng</th>
                <th>Mô Tả</th>
                <th>Trạng Thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaHangDienThoai</td>
                    <td>@item.TenHangDienThoai</td>
                    <td>@item.MoTa</td>
                    <td>@(item.TrangThai == 1 ? "Hoạt động" : "Khóa")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaHangDienThoai" class="btn btn-sm btn-warning text-white">Sửa</a>
                        <form asp-action="Delete" asp-route-id="@item.MaHangDienThoai" method="post" style="display:inline;" onsubmit="return confirm('Xóa hãng này?');">
                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>