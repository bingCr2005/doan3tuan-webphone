@model DoAn3Tuan_WebPhone.ViewModels.AdminProductViewModel
@{
    ViewData["Title"] = "Thêm điện thoại mới";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-2 sidebar bg-dark text-white p-3" style="min-height: 100vh;">
            <h4 class="text-center mb-4">ADMIN</h4>
            <a href="#" class="d-block text-white text-decoration-none p-2">🏠 Dashboard</a>
            <a asp-controller="AdminProduct" asp-action="Index" class="d-block text-white text-decoration-none p-2 active bg-primary rounded">📱 Điện thoại</a>
            <a asp-controller="AdminHang" asp-action="Index" class="d-block text-white text-decoration-none p-2">🏷️ Hãng điện thoại</a>
            <a asp-controller="AdminKhachHang" asp-action="Index" class="d-block text-white text-decoration-none p-2">👥 Khách hàng</a>
            <a asp-controller="AdminNCC" asp-action="Index" class="d-block text-white text-decoration-none p-2">🏭 Nhà cung cấp</a>
            <a asp-controller="AdminKhuyenMai" asp-action="Index" class="d-block text-white text-decoration-none p-2">🎁 Khuyến mãi</a>
            <a asp-controller="AdminDonHang" asp-action="Index" class="d-block text-white text-decoration-none p-2">🛒 Đơn hàng</a>
            <a asp-controller="AdminHoaDon" asp-action="Index" class="d-block text-white text-decoration-none p-2">Hóa đơn</a>
            <a asp-controller="AdminThongKe" asp-action="Index" class="d-block text-white text-decoration-none p-2">📈 Thống kê</a>
            <a asp-controller="AdminComment" asp-action="Index" class="d-block text-white text-decoration-none p-2 ">💬 Bình luận</a>
            <a asp-controller="AdminLienHe" asp-action="Index" class="d-block text-white text-decoration-none p-2">📞 Liên hệ</a>
            <a asp-controller="AdminAccount" asp-action="Logout" class="d-block text-white text-decoration-none p-2">🚪 Đăng xuất</a>
        </div>

        <div class="col-10 p-4 bg-light">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-dark">Thêm điện thoại mới</h3>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill px-3">Quay lại danh sách</a>
            </div>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-8">
                        <div class="card border-0 shadow-sm rounded-3 mb-4">
                            <div class="card-body p-4">
                                <h5 class="fw-bold mb-4 text-primary">Thông tin bán hàng</h5>

                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label class="form-label small fw-bold">Mã máy</label>
                                        <input asp-for="Product.MaDienThoai" class="form-control bg-light border-0" required />
                                    </div>
                                    <div class="col-md-8">
                                        <label class="form-label small fw-bold">Tên sản phẩm</label>
                                        <input asp-for="Product.TenDienThoai" class="form-control bg-light border-0" required />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold">Hãng</label>
                                        <select asp-for="Product.HangDienThoai" class="form-select bg-light border-0" asp-items="Model.HangList"></select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold">Nhà cung cấp</label>
                                        <select asp-for="Product.MaNhaCungCap" class="form-select bg-light border-0" asp-items="Model.NccList"></select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold">Đơn giá (VNĐ)</label>
                                        <input asp-for="Product.DonGia" type="number" class="form-control bg-light border-0 fw-bold text-danger" required />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold">Số lượng tồn</label>
                                        <input asp-for="Product.SoLuongTon" type="number" class="form-control bg-light border-0" />
                                    </div>
                                    <div class="col-12 mt-3">
                                        <label class="form-label small fw-bold">Mô tả sản phẩm</label>
                                        <textarea asp-for="Product.MoTa" class="form-control bg-light border-0" rows="5"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm rounded-3 mb-4">
                            <div class="card-body p-4 text-center">
                                <h6 class="fw-bold text-start mb-3">Ảnh sản phẩm</h6>
                                <div class="bg-white border rounded mb-3 d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <img id="previewImg" src="/images/no-image.png" style="max-height: 100%; max-width: 100%; object-fit: contain;" onerror="this.src='/images/no-image.png'" />
                                </div>
                                <input asp-for="Product.Thumbnail" class="form-control form-control-sm bg-light border-0" placeholder="Đường dẫn ảnh..." oninput="document.getElementById('previewImg').src=this.value" />
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm rounded-3 mb-4">
                            <div class="card-body p-4">
                                <h6 class="fw-bold mb-3 text-info">Cấu hình chi tiết</h6>
                                <div class="row g-2">
                                    <div class="col-6"><input asp-for="Product.Ram" class="form-control form-control-sm bg-light border-0" placeholder="RAM" /></div>
                                    <div class="col-6"><input asp-for="Product.DungLuong" class="form-control form-control-sm bg-light border-0" placeholder="Bộ nhớ" /></div>
                                    <div class="col-6"><input asp-for="Product.DungLuongPin" class="form-control form-control-sm bg-light border-0" placeholder="Pin" /></div>
                                    <div class="col-6"><input asp-for="Product.KichThuocManHinh" class="form-control form-control-sm bg-light border-0" placeholder="Màn hình" /></div>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">
                            LƯU SẢN PHẨM
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>