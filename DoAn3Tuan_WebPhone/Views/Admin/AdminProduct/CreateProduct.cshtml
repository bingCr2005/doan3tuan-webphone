@model DoAn3Tuan_WebPhone.ViewModels.AdminProductViewModel
@{
    ViewData["Title"] = "Thêm điện thoại mới";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-2 sidebar bg-dark text-white p-3" style="min-height: 100vh;">
            <h4 class="text-center mb-4">ADMIN</h4>
            <a href="/AdminProduct/Index" class="d-block text-white text-decoration-none p-2 active bg-primary rounded">📱 Điện thoại</a>
            <a href="/LienHe/Index" class="d-block text-white text-decoration-none p-2">📞 Liên hệ</a>
        </div>

        <div class="col-10 p-4">
            <h3 class="mb-4">➕ Thêm điện thoại mới</h3>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-7">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-primary text-white">📦 Thông tin bán hàng</div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="fw-bold">Mã máy (VD: DT050)</label>
                                    @* Thêm "Product." trước MaDienThoai *@
                                    <input asp-for="Product.MaDienThoai" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label class="fw-bold">Tên sản phẩm</label>
                                    <input asp-for="Product.TenDienThoai" class="form-control" required />
                                </div>
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <label>Hãng</label>
                                        @* Sử dụng Model.HangList từ ViewModel *@
                                        <select asp-for="Product.HangDienThoai" class="form-select" asp-items="Model.HangList"></select>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label>Nhà cung cấp</label>
                                        <select asp-for="Product.MaNhaCungCap" class="form-select" asp-items="Model.NccList"></select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <label>Đơn giá</label>
                                        <input asp-for="Product.DonGia" type="number" class="form-control text-danger fw-bold" required />
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label>Số lượng tồn</label>
                                        <input asp-for="Product.SoLuongTon" type="number" class="form-control" value="0" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label>Đường dẫn ảnh (Thumbnail)</label>
                                    <input asp-for="Product.Thumbnail" class="form-control" placeholder="/images/ten-anh.jpg" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5">
                        <div class="card shadow-sm border-warning">
                            <div class="card-header bg-warning fw-bold">⚙️ Thông số cấu hình</div>
                            <div class="card-body bg-light">
                                <div class="row g-2">
                                    <div class="col-6 mb-2">
                                        <label class="small">Hệ điều hành</label>
                                        <input asp-for="Product.HeDieuHanh" class="form-control" />
                                    </div>
                                    <div class="col-6 mb-2">
                                        <label class="small">Màu sắc</label>
                                        <input asp-for="Product.MauSac" class="form-control" />
                                    </div>
                                    <div class="col-6 mb-2">
                                        <label class="small">RAM</label>
                                        <input asp-for="Product.Ram" class="form-control" />
                                    </div>
                                    <div class="col-6 mb-2">
                                        <label class="small">Bộ nhớ</label>
                                        <input asp-for="Product.DungLuong" class="form-control" />
                                    </div>
                                    <div class="col-6 mb-2">
                                        <label class="small">Màn hình</label>
                                        <input asp-for="Product.KichThuocManHinh" class="form-control" />
                                    </div>
                                    <div class="col-6 mb-2">
                                        <label class="small">Pin</label>
                                        <input asp-for="Product.DungLuongPin" class="form-control" />
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <label class="small">Mô tả tóm tắt</label>
                                    <textarea asp-for="Product.MoTa" class="form-control" rows="3"></textarea>
                                </div>
                                <hr />
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success fw-bold">💾 Lưu sản phẩm</button>
                                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>