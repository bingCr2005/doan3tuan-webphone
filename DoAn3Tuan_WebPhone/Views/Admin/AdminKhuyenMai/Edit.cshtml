@model DoAn3Tuan_WebPhone.Models.KhuyenMai
@{
    ViewData["Title"] = "Chỉnh sửa khuyến mãi";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Css/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 sidebar bg-dark text-white p-3" style="min-height: 100vh;">
                <h4 class="text-center mb-4">ADMIN</h4>
                <a href="#" class="d-block text-white text-decoration-none p-2">🏠 Dashboard</a>
                <a asp-controller="AdminProduct" asp-action="Index" class="d-block text-white text-decoration-none p-2">📱 Điện thoại</a>
                <a asp-controller="AdminHang" asp-action="Index" class="d-block text-white text-decoration-none p-2">🏷️ Hãng điện thoại</a>
                <a asp-controller="AdminKhachHang" asp-action="Index" class="d-block text-white text-decoration-none p-2">👥 Khách hàng</a>
                <a asp-controller="AdminNhaCungCap" asp-action="Index" class="d-block text-white text-decoration-none p-2">🏭 Nhà cung cấp</a>
                <a asp-controller="AdminKhuyenMai" asp-action="Index" class="d-block text-white text-decoration-none p-2 active bg-primary rounded">🎁 Khuyến mãi</a>
                <a asp-controller="AdminDonHang" asp-action="Index" class="d-block text-white text-decoration-none p-2">🛒 Đơn hàng</a>
                <a asp-controller="AdminHoaDon" asp-action="Index" class="d-block text-white text-decoration-none p-2">🧾 Hóa đơn</a>
                <a asp-controller="AdminThongKe" asp-action="Index" class="d-block text-white text-decoration-none p-2">📈 Thống kê</a>
                <a asp-controller="AdminComment" asp-action="Index" class="d-block text-white text-decoration-none p-2 ">💬 Bình luận</a>
                <a asp-controller="AdminLienHe" asp-action="Index" class="d-block text-white text-decoration-none p-2">📞 Liên hệ</a>
                <a asp-controller="AdminChat" asp-action="Index" class="d-block text-white text-decoration-none p-2">💬 Tin nhắn khách hàng</a>
                <a asp-controller="AdminLogin" asp-action="Index" class="d-block text-white text-decoration-none p-2">🚪 Đăng xuất</a>
            </div>

            <div class="col-10 p-4 bg-light">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-bold text-dark">✏️ Hiệu chỉnh chương trình: <span class="text-primary">@Model.MaKhuyenMai</span></h3>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill px-3">Hủy bỏ</a>
                </div>

                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="MaKhuyenMai" />

                    <div class="row">
                        <div class="col-md-8">
                            <div class="card border-0 shadow-sm rounded-3 mb-4">
                                <div class="card-body p-4">
                                    <h5 class="fw-bold mb-4 text-primary">Cập nhật thông tin</h5>
                                    <div class="row g-3">
                                        <div class="col-md-12">
                                            <label class="form-label small fw-bold">Tên chương trình khuyến mãi</label>
                                            <input asp-for="TenChuongTrinhKhuyenMai" class="form-control bg-light border-0" required />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label small fw-bold">Mức giảm giá (VNĐ)</label>
                                            <input asp-for="MucGiamGia" type="number" class="form-control bg-light border-0 fw-bold text-danger" required />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label small fw-bold">Số lượng đã sử dụng</label>
                                            <input asp-for="SoLuongMaKhuyenMaiDaDung" type="number" class="form-control bg-light border-0" />
                                        </div>
                                    </div>
                                    <div class="mt-4">
                                        <label class="form-label small fw-bold">Điều kiện áp dụng chi tiết</label>
                                        <textarea asp-for="DieuKienApDung" class="form-control bg-light border-0" rows="6"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm rounded-3 mb-4">
                                <div class="card-body p-4">
                                    <h5 class="fw-bold mb-3 text-primary">Thiết lập</h5>
                                    <div class="mb-3">
                                        <label class="form-label small fw-bold">Ngày bắt đầu</label>
                                        <input asp-for="NgayBatDau" type="date" class="form-control bg-light border-0" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label small fw-bold">Ngày hết hạn</label>
                                        <input asp-for="NgayHetHan" type="date" class="form-control bg-light border-0" required />
                                    </div>
                                    <hr />
                                    <div class="mb-0">
                                        <label class="form-label small fw-bold">Trạng thái chương trình</label>
                                        <select asp-for="TrangThai" class="form-select bg-primary bg-opacity-10 text-primary fw-bold border-0">
                                            <option value="1">Đang kích hoạt</option>
                                            <option value="0">Tạm dừng</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-warning w-100 py-3 fw-bold shadow-sm rounded-3 text-dark">
                                Cap nhat ma giam gia
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>