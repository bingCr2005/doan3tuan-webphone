@model DoAn3Tuan_WebPhone.Models.NhaCungCap
@{
    ViewData["Title"] = "Cập nhật nhà cung cấp";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        ✏️ Cập nhật nhà cung cấp
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-controller="AdminNhaCungCap" asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MaNhaCungCap" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Tên nhà cung cấp</label>
                                <input asp-for="TenNhaCungCap" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Người đại diện</label>
                                <input asp-for="NguoiDaiDien" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Số điện thoại</label>
                            <input asp-for="SoDienThoai" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="vd: ten@vn.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Địa chỉ</label>
                            <input asp-for="DiaChi" class="form-control"/>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Trạng thái xử lý</label>
                            <select asp-for="TrangThai" class="form-select">
                                <option value="0">🟡 Ngừng hoạt động</option>
                                <option value="1">🟢 Đang hoạt động</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                ⬅ Quay lại
                            </a>

                            <button type="submit" class="btn btn-success px-4">
                                💾 Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}