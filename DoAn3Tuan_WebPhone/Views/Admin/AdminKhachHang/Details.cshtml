@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DoAn3Tuan_WebPhone.Models.TaiKhoan
@{
    Layout = null;
    ViewData["Title"] = "Hồ sơ khách hàng";
    var hoaDons = ViewBag.HoaDons as List<DoAn3Tuan_WebPhone.Models.HoaDon>;
    var gioHang = ViewBag.GioHang as List<DoAn3Tuan_WebPhone.Models.ChiTietGioHang>;
    var binhLuans = ViewBag.BinhLuans as List<DoAn3Tuan_WebPhone.Models.BinhLuan>;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        .sidebar {
            min-height: 100vh;
            position: fixed;
            width: 16.666667%;
        }

        .main-content {
            margin-left: 16.666667%;
        }

        .sidebar .nav-link {
            color: white;
            padding: 12px;
        }

        .nav-tabs .nav-link {
            color: #495057;
            fw-bold;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 sidebar bg-dark text-white p-3" style="min-height: 100vh;">
                <h4 class="text-center mb-4">ADMIN</h4>
                <a href="#" class="d-block text-white text-decoration-none p-2">🏠 Dashboard</a>
                <a asp-controller="AdminProduct" asp-action="Index" class="d-block text-white text-decoration-none p-2">📱 Điện thoại</a>
                <a asp-controller="AdminHang" asp-action="Index" class="d-block text-white text-decoration-none p-2">🏷️ Hãng điện thoại</a>
                <a asp-controller="AdminKhachHang" asp-action="Index" class="d-block text-white text-decoration-none p-2 active bg-primary rounded">👥 Khách hàng</a>
                <a asp-controller="AdminNhaCungCap" asp-action="Index" class="d-block text-white text-decoration-none p-2">🏭 Nhà cung cấp</a>
                <a asp-controller="AdminKhuyenMai" asp-action="Index" class="d-block text-white text-decoration-none p-2">🎁 Khuyến mãi</a>
                <a asp-controller="AdminDonHang" asp-action="Index" class="d-block text-white text-decoration-none p-2">🛒 Đơn hàng</a>
                <a asp-controller="AdminHoaDon" asp-action="Index" class="d-block text-white text-decoration-none p-2">🧾 Hóa đơn</a>
                <a asp-controller="AdminThongKe" asp-action="Index" class="d-block text-white text-decoration-none p-2">📈 Thống kê</a>
                <a asp-controller="AdminComment" asp-action="Index" class="d-block text-white text-decoration-none p-2 ">💬 Bình luận</a>
                <a asp-controller="AdminLienHe" asp-action="Index" class="d-block text-white text-decoration-none p-2">📞 Liên hệ</a>
                <a asp-controller="AdminChat" asp-action="Index" class="d-block text-white text-decoration-none p-2">💬 Tin nhắn khách hàng</a>
                <a asp-controller="AdminLogin" asp-action="Index" class="d-block text-white text-decoration-none p-2">🚪 Đăng xuất</a>
            </div>

            <div class="col-md-10 main-content p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-bold text-primary">👤 Hồ sơ: @Model.HoVaTen</h3>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>

                <ul class="nav nav-tabs mb-4" id="customerTab" role="tablist">
                    <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#info">Thông tin chính</button></li>
                    <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#orders">Đơn hàng (@hoaDons.Count)</button></li>
                    <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#cart">Giỏ hàng (@gioHang.Count)</button></li>
                    <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#comments">Bình luận (@binhLuans.Count)</button></li>
                </ul>

                <div class="tab-content bg-white p-4 shadow-sm rounded">
                    <div class="tab-pane fade show active" id="info">
                        <div class="row">
                            <div class="col-md-6"><p><strong>Mã KH:</strong> @Model.MaTaiKhoan.Trim()</p><p><strong>Email:</strong> @Model.Email</p></div>
                            <div class="col-md-6"><p><strong>SĐT:</strong> @Model.SoDienThoai</p><p><strong>Địa chỉ:</strong> @Model.DiaChi</p></div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="orders">
                        <table class="table table-sm">
                            <thead><tr><th>Mã HĐ</th><th>Ngày mua</th><th>Tổng tiền</th><th>Trạng thái</th></tr></thead>
                            <tbody>
                                @foreach (var hd in hoaDons)
                                {
                                    <tr>
                                        <td>@hd.MaHoaDon</td>
                                        <td>@hd.NgayLap?.ToString("dd/MM/yyyy")</td>
                                        <td class="text-danger fw-bold">@hd.TongTien?.ToString("N0")đ</td>
                                        <td><span class="badge bg-info">@hd.TrangThai</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="tab-pane fade" id="cart">
                        <table class="table table-sm">
                            <thead><tr><th>Sản phẩm</th><th>Số lượng</th><th>Thành tiền</th></tr></thead>
                            <tbody>
                                @foreach (var ct in gioHang)
                                {
                                    <tr><td>@ct.MaDienThoaiNavigation?.TenDienThoai</td><td>@ct.SoLuong</td><td class="text-danger">@ct.ThanhTien?.ToString("N0")đ</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="tab-pane fade" id="comments">
                        @foreach (var bl in binhLuans)
                        {
                            <div class="border-bottom mb-3 pb-2">
                                <p class="mb-1 text-primary fw-bold">📱 @bl.MaDienThoaiNavigation?.TenDienThoai (@bl.SoSao ⭐)</p>
                                <p class="mb-0 small">"@bl.NoiDung"</p>
                                <span class="text-muted" style="font-size: 0.8rem;">Ngày: @bl.NgayBinhLuan?.ToString("dd/MM/yyyy")</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>