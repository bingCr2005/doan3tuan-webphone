@model DoAn3Tuan_WebPhone.Models.LienHe
@{
    ViewData["Title"] = "Cập nhật liên hệ";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        ✏️ Cập nhật liên hệ
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-controller="LienHe"  asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MaLienHe" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Họ tên</label>
                                <input asp-for="HoTen" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Email</label>
                                <input asp-for="Email" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Số điện thoại</label>
                            <input asp-for="SoDienThoai" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Nội dung liên hệ</label>
                            <textarea asp-for="NoiDung"
                                      class="form-control"
                                      rows="4"></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Trạng thái xử lý</label>
                            <select asp-for="TrangThai" class="form-select">
                                <option value="0">🟡 Chưa phản hồi</option>
                                <option value="1">🟢 Đã phản hồi</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                ⬅ Quay lại
                            </a>

                            <button type="submit" class="btn btn-success px-4">
                                💾 Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>
